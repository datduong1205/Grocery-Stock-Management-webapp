<% include partials/header.ejs %>

<style>
  #contact {
    padding: 4rem 0;
    background: #f8f9fa;
    min-height: calc(100vh - 160px);
  }

  .sub_title {
    color: #2e7d32;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    font-weight: 700;
  }

  .contact_container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .contact_columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .contact_left_column {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  }

  .contact_left_column p {
    font-size: 1.1rem;
    margin: 1.5rem 0;
    color: #444;
  }

  .contact_left_column i {
    color: #2e7d32;
    margin-right: 1rem;
    width: 25px;
  }

  .contact_right_column {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  }

  form input,
  form textarea {
    width: 100%;
    padding: 0.8rem;
    margin: 0.5rem 0 1.5rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-family: "Montserrat", sans-serif;
  }

  form input:focus,
  form textarea:focus {
    outline: none;
    border-color: #2e7d32;
    box-shadow: 0 0 0 2px rgba(46, 125, 50, 0.2);
  }

  .button {
    background: #2e7d32;
    color: white !important;
    padding: 1rem 2rem;
    border: none;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.3s, background 0.3s;
  }

  .button:hover {
    background: #1b5e20;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .contact_columns {
      grid-template-columns: 1fr;
    }

    .sub_title {
      font-size: 2rem;
    }
  }
</style>

<section id="contact">
  <div class="contact_container">
    <div class="contact_columns">
      <div class="contact_left_column">
        <h1 class="sub_title">Get in Touch</h1>
        <p>
          <i class="fa-solid fa-envelope"></i>
          Email: grocerygo@support.com
        </p>
        <p>
          <i class="fa-solid fa-phone"></i>
          Phone: (437) 555-1234
        </p>
        <p>
          <i class="fa-solid fa-location-dot"></i>
          Address: 123 Grocery Street, Toronto, ON
        </p>
        <p>
          <i class="fa-solid fa-clock"></i>
          Hours: Mon-Sat 9AM - 8PM
        </p>
      </div>

      <div class="contact_right_column">
        <form>
          <div class="form-group">
            <input type="text" name="name" placeholder="Your Name" required />
          </div>
          <div class="form-group">
            <input
              type="email"
              name="email"
              placeholder="Your Email"
              required
            />
          </div>
          <div class="form-group">
            <textarea
              name="message"
              rows="6"
              placeholder="Your Message"
              required
            ></textarea>
          </div>
          <button type="submit" class="button">
            <i class="fa-solid fa-paper-plane me-2"></i>
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

