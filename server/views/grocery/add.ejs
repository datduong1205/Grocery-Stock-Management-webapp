<% include ../partials/header.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Item</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the item"
            name="item"
            required
          />
        </div>

        <div class="form-group">
          <label for="weightTextField">Brand</label>
          <input
            type="text"
            class="form-control"
            id="weightTextField"
            placeholder="Enter the brand"
            name="brand"
            required
          />
        </div>

        <div class="form-group">
          <label for="exerciseTextField">Cost</label>
          <input
            type="text"
            class="form-control"
            id="exerciseTextField"
            placeholder="Enter the price"
            name="cost"
            required
          />
        </div>

        <div class="form-group">
          <label for="repsTextArea">Quantity</label>
          <textarea
            type="text"
            class="form-control"
            id="repsTextArea"
            placeholder="Enter the quantity"
            name="quantity"
            required
          ></textarea>
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/workout" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
