<% include ../partials/header.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Item</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the item"
            name="item"
            value="<%= grocery.item %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="authorTextField">Brand</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the brand"
            name="brand"
            value="<%= grocery.brand %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="publishedTextField">Cost</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the price"
            name="cost"
            value="<%= grocery.cost %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="publishedTextField">Quantity</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the price"
            name="quantity"
            value="<%= grocery.quantity %>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/grocery" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
  <div class="blank"></div>
</div>

<% include ../partials/footer.ejs %>
