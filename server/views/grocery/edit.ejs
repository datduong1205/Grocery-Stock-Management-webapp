<% include ../partials/header.ejs %>

<style>
  .edit-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: white;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  }

  .edit-header {
    color: #2e7d32;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-align: center;
  }

  .form-label {
    color: #444;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .form-control {
    border: 1px solid #ddd;
    padding: 0.8rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s;
  }

  .form-control:focus {
    border-color: #2e7d32;
    box-shadow: 0 0 0 2px rgba(46, 125, 50, 0.2);
  }

  .btn-group {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  .btn-success {
    background: #2e7d32;
    border: none;
    padding: 0.8rem 2rem;
    transition: all 0.3s;
  }

  .btn-success:hover {
    background: #1b5e20;
    transform: translateY(-2px);
  }

  .input-icon {
    position: relative;
  }

  .input-icon i {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #2e7d32;
  }
</style>

<body>
  <main class="container">
    <div class="edit-container">
      <h1 class="edit-header">Edit Item</h1>

      <form method="POST" autocomplete="off">
        <div class="form-group">
          <label class="form-label" for="nameTextField">Item Name</label>
          <div class="input-icon">
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter item name"
              name="item"
              value="<%= grocery.item %>"
              required
              autofocus
            />
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label" for="authorTextField">Brand</label>
          <div class="input-icon">
            <input
              type="text"
              class="form-control"
              id="authorTextField"
              placeholder="Enter brand"
              name="brand"
              value="<%= grocery.brand %>"
              required
            />
            <i class="fa-solid fa-tag"></i>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label" for="publishedTextField">Cost</label>
          <div class="input-icon">
            <input
              type="number"
              class="form-control"
              id="publishedTextField"
              placeholder="Enter price"
              name="cost"
              step="0.01"
              value="<%= grocery.cost %>"
              required
            />
            <i class="fa-solid fa-dollar-sign"></i>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label" for="quantityField">Quantity</label>
          <div class="input-icon">
            <input
              type="number"
              class="form-control"
              id="quantityField"
              placeholder="Enter quantity"
              name="quantity"
              min="1"
              value="<%= grocery.quantity %>"
              required
            />
            <i class="fa-solid fa-hashtag"></i>
          </div>
        </div>

        <div class="btn-group">
          <a href="/grocery" class="btn btn-outline-secondary">
            <i class="fa-solid fa-xmark me-2"></i>Cancel
          </a>
          <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
          </button>
        </div>
      </form>
    </div>
  </main>
</body>

<% include ../partials/footer.ejs %>
